APP_NAME="E-Commerce Testing"
APP_ENV=testing
APP_KEY=base64:test_key_here_replace_with_actual_generated_key
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Use SQLite in-memory for faster tests
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Disable mail sending in tests
MAIL_MAILER=array
MAIL_HOST=null
MAIL_PORT=null
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=test@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Use test Stripe keys
STRIPE_KEY=pk_test_example
STRIPE_SECRET=sk_test_example

# Disable external services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# COD Testing Configuration
COD_ENABLED=true
COD_MIN_ORDER_AMOUNT_CENTS=1000
COD_MAX_ORDER_AMOUNT_CENTS=1000000
COD_FEE_CENTS=500
COD_FEE_PERCENTAGE=0.02

# Testing Flags
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
